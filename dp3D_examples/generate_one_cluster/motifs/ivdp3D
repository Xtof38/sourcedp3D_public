reset
wireframe off

set picking ident
select all
spacefill temperature
centre [0,0,0]

translate x 0
translate y 0
select arsenic
color white

#there are 12 graded colors:
select astatine # at
color [0,0,150] #1 deep blue

select bromine # br
color [0,100,255] #2 blue

select calcium # ca
color [0,255,255] #3 pale blue

select californium # cf
color [180,255,255] #4 very pale blue

select cerium # ce
color [100,255,150] #5 green blue

select caesium # cs
color [0,255,0] #6 green 

select chlorine # cl
color [170,255,0]#7 deep yellow-green

select chromium # cr
color [255,255,0]# 8 yellow

select curium # cm
color [255,180,50]# 9 yellow-orange

select einsteinium # es
color [255,100,0]# 10 orange


select europium # eu
color [200,0,0]# 11 red

select Gadolinium # gd
color [120,0,0]# 12 deep red

#there are 32 atoms used, the first 16 correspond to material 1
